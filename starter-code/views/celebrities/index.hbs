<h2>CELEBRITIES</h2>
{{#each celebrities}}
<p>{{this.name}}</p>
<a href="/celebrities/{{this._id}}">See all details</a>

<form action="/celebrities/{{this._id}}/delete" method="post">
    <button type="submit">DELETE</button>
</form>

<form action="/celebrities/{{this._id}}/edit" method="get">
    <button type="submit">EDIT</button>
</form>
{{/each}}

<a href="/celebrities/new">Add a new celebrity</a>